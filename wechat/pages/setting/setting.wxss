}

.box{
  margin: 0 auto;
  margin-bottom: 20rpx;
  height: 620rpx;
  width: 80%;
  border: black solid 1px;
  align-items: center;
  border-radius: 20rpx;
}

.box .one{
  width: 80%;
  margin: 0 auto;
  display: flex;
  height: 80rpx;
  /* border: #aaaaff solid 1px; */
  line-height:80rpx;
  margin-top: 20rpx;
  border-radius: 10px;
}

.box .one .name{
  width: 40%;
  text-align: center;
  margin: 0 auto
}

.box .one .id{
  width: 40%;
  text-align: center;
  margin: 0 auto
}

.box .one .status{
  width: 20%;
  text-align: center;
  margin: 0 auto
}